{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "lib": [
      "es2018",
      "es2019"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": "./src"
  },
  "exclude": [
    "dist",
    "node_modules",
    "cdk.out",
    "lib",
    "test",
    "**/*.unit.ts"
  ]
}