{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],
  "stabilityDays": 21,
  "internalChecksFilter": "strict",
  "dependencyDashboard": true,
  "major": {
    "automerge": false,
    "dependencyDashboardApproval": true,
    "addLabels": [
      "major-upgrade"
    ]
  },
  "replacement": {
    "automerge": false,
    "addLabels": [
      "replacement"
    ]
  },
  "vulnerabilityAlerts": {
    "addLabels": [
      "security"
    ]
  },
  "transitiveRemediation": true,
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["volta"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": [
        "@stedi"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "pinDigest",
        "rollback",
        "bump"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "stabilityDays": 0,
      "addLabels": [
        "dependencies"
      ]
    },
    {
      "matchPackageNames": [
        "software.amazon.smithy:smithy-waiters",
        "software.amazon.smithy:smithy-openapi",
        "software.amazon.smithy:smithy-aws-apigateway-traits",
        "software.amazon.smithy:smithy-aws-traits",
        "software.amazon.smithy:smithy-validation-model",
        "software.amazon.smithy:smithy-model",
        "software.amazon.smithy:smithy-build",
        "software.amazon.smithy:smithy-cli"
      ],
      "allowedVersions": "<=1.21.0"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/aws",
        "https://github.com/amzn",
        "https://github.com/microsoft"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "pinDigest",
        "rollback",
        "bump"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "platformAutomerge": true,
      "stabilityDays": 3,
      "addLabels": [
        "dependencies"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "pinDigest",
        "rollback",
        "bump"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "platformAutomerge": true,
      "addLabels": [
        "dependencies"
      ]
    }
  ],
  "npmrcMerge": true
}
